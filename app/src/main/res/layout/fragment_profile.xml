<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/profile"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Image" />

    </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:background="@color/tranparan"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:elevation="100dp"> <!-- Menambahkan atribut elevation untuk bayangan -->
            </TextView>

        </FrameLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="Github"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txtGithub"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="GitHub Username"
        android:textSize="16sp" />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="@string/followers"
            android:textSize="16sp" />
    <TextView
        android:id="@+id/txtFollowers"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="16sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="@string/following"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/txtFollowing"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="16sp" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal">
    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:background="@drawable/button_follow"
        android:layout_height="wrap_content"
        android:text="FOLLOW" />



    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        app:srcCompat="@drawable/shares" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:textSize="15sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Post" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Video" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:layout_marginLeft="0dp"
        android:layout_height="wrap_content"
        android:text="Tag" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/pantai" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="115dp"
        android:layout_height="110dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/sunrise" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/poltek" />
</LinearLayout>
</LinearLayout>
